{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <div class="container mt-4 custom-contact-container">
    <div class="row">
        <div class="col text-center">
            <div class="rounded-pill bg-dark d-inline-block p-3">
                <h2 class="section-title m-0">Réinitialiser votre mot de passe</h2>
            </div>
        </div>
    </div>
    
<div class="container mt-4 mb-4">
        <div class="row justify-content-center">
            <div class="col-lg-6 col-md-10 col-sm-12 semi-transparent-bg-white p-4 text-center text-black">
    {{ form_start(requestForm) }}
        {{ form_row(requestForm.email) }}
        <div class="text-black text-center">
            <small>
                Entrez votre adresse e-mail, et vous recevrez un e-mail de réinitialisation.
            </small>
        </div>

        <button class="btn btn-secondary mt-4">Demande de réinitialisation</button>
    {{ form_end(requestForm) }}
               </div>
        </div>
    </div>
</div>
{% endblock %}
