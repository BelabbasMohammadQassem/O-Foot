{% extends 'base.html.twig' %}

{% block title %}Club index{% endblock %}

{% block body %}

<!-- Main Content -->
<div class="container my-5 flex-grow-1">
    <div class="row">
        <!-- Profile Information -->
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header bg-dark text-white">
                    <h3 class="mb-0 text-center"> Mon Profil</h3>
                </div>
                <div class="card-body d-flex flex-column align-items-center">
                    <img src="https://img.freepik.com/vecteurs-premium/avatar-footballeur-francais_24908-33227.jpg" style="width: 250px; height: 200px;" class="rounded-circle mb-3" alt="User Avatar">
                    <h6 class="mb-1 textblack">{{ accountInfo.firstname }} {{ accountInfo.lastname }}</h6>
                    <p class="text-muted mb-1">{{ accountInfo.email }}</p>
                    <p class="text-muted mb-0">{{ accountInfo.clubName }}</p>
                    <p></p> <!-- paragraphe vide pour saut de ligne --> 
                    {#  #}
                </div>
            </div>
        </div>
<div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header bg-dark text-white">
                    <h3 class="mb-0 text-center">Mon Club</h3>
                </div>
                <div class="card-body d-flex flex-column align-items-center">
            <img src="{{ accountInfo.clubLogo }}" style="width: 250px; height: 200px;" class="rounded-circle mb-3" alt="User Avatar">
            <h6 class="mb-1 textblack">{{ accountInfo.clubName }}</h6>
            <p class="text-muted mb-1">N° de licence : {{ accountInfo.clubLicenceNumber }}</p>
            <p class="text-muted mb-0">Tournois inscrits à venir :</p>
            {% if accountInfo.userTournamentDate is not null %}
                <p class="text-black">{{ accountInfo.userTournament }} le {{ accountInfo.userTournamentDate|date("d-m-Y") }}</p>
            {% else %}
                <p class="text-black">{{ accountInfo.userTournament ?? 'Aucun tournoi à venir' }}</p>
            {% endif %}
            <p></p> <!-- paragraphe vide pour saut de ligne -->
            {# <button class="btn btn-danger">Se Déconnecter</button> #}
</div>

            </div>
        </div>
        <div class="mb-4 text-center"> <a href="{{ path('app_logout') }}">
                            <button class="btn btn-danger">Se Déconnecter</button>
                        </a> </div>
            
            
    </div>
</div>
        </div>
    </div>
</div>

{% endblock %}
