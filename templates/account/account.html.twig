{% extends 'base.html.twig' %}

{% block title %}Club index{% endblock %}

{% block body %}

<!-- Main Content -->
<div class="container my-5 flex-grow-1">
    <div class="row">
        <!-- Profile Information -->
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0">Profil</h5>
                </div>
                <div class="card-body d-flex flex-column align-items-center">
                    <img src="./images/150.png" class="rounded-circle mb-3" alt="User Avatar">
                    <h6 class="mb-1 textblack">Nom de l'utilisateur</h6>
                    <p class="text-muted mb-1">email@example.com</p>
                    <p class="text-muted mb-0">Club: Club Name</p>
                    <p></p> <!-- paragraphe vide pour saut de ligne --> 
                    <button class="btn btn-danger">Se Déconnecter</button>
                </div>
            </div>
        </div>

        <!-- Account Settings -->
        <div class="col-md-8 mb-4">
            <div class="card mb-4">
                <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Paramètres du Compte</h5>
                    <button type="button" class="btn btn-secondary w-25">Ajouter un Club</button>
                </div>
                <div class="card-body">
                    <div class="mb-3 mx-4 text-center">
                        <label class="form-label fw-bold">Date d'inscription</label>
                        <p class="form-control-plaintext">Date d'inscription</p>
                    </div>
                    <div class="mb-3 mx-4 text-center">
                        <label class="form-label fw-bold">E-mail utilisateur</label>
                        <p class="form-control-plaintext">E-mail de l'utilisateur</p>
                    </div>
                    <div class="mb-3 mx-4 text-center">
                        <label class="form-label fw-bold">Club utilisateur</label>
                        <p class="form-control-plaintext">Club de l'utilisateur</p>
                    </div>
                </div>
            </div>
            
            <!-- Second Account Settings -->
             <div class="card">
    <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Options du compte</h5>
        <button type="button" class="btn btn-success w-25">Se rattacher à un club</button>
    </div>
    <div class="card-body">
        <div class="d-flex justify-content-between">
            <button type="button" class="btn btn-success mx-2 mt-2 mb-2">Accéder à mon profil</button>
            <button type="button" class="btn btn-warning mx-2 mt-2 mb-2">M'inscrire à un tournoi</button>
            <button type="button" class="btn btn-secondary mx-2 mt-2 mb-2">Créer un tournoi</button>
           
        </div>
    </div>
</div>
        </div>
    </div>
</div>

{% endblock %}
