{% extends 'base.html.twig' %}

{% block title %}Contact - O'FOOT{% endblock %}

{% block body %}
<div class="container mt-4 custom-contact-container">
    <div class="row">
        <div class="col text-center">
            <div class="rounded-pill bg-dark d-inline-block p-3">
                <h2 class="section-title m-0">Contactez-nous</h2>
            </div>
        </div>
    </div>

    <div class="container form-container ">
        <div class="row justify-content-center">
            <div class="col-lg-6 col-md-8 col-sm-10">
                {{ form_start(formulaire, {'attr': {'class': 'login-form'}}) }}
                <div class="textblack text-center">
                    <div class="mb-3">
                        {{ form_label(formulaire.name, 'Nom', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(formulaire.name, {'attr': {'class': 'form-control', 'id': 'name', 'required': true}}) }}
                    </div>
                    <div class="mb-3">
                        {{ form_label(formulaire.email, 'Email', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(formulaire.email, {'attr': {'class': 'form-control', 'id': 'email', 'required': true}}) }}
                    </div>
                    <div class="mb-3">
                        {{ form_label(formulaire.content, 'Message', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(formulaire.content, {'attr': {'class': 'form-control', 'id': 'message', 'rows': 5, 'required': true}}) }}
                    </div>
                    <div class="form-group text-center">
                        {{ form_widget(formulaire.submit) }}
                    </div>
                </div>
                {{ form_end(formulaire) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
