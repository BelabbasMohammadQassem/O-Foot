<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}O'FOOT{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.7.2/font/bootstrap-icons.min.css" rel="stylesheet">
    <link rel="stylesheet" href="{{ asset('styles.css') }}">
    {% block stylesheets %}{% endblock %}
</head>
<body class="background-image">
    {% block navbar %}
        {% if is_granted('ROLE_ADMIN') %}
            {# Navbar pour le backoffice #}
            <nav class="navbar navbar-expand-lg navbar-dark bg-company-grey custom-navbar">
                <div class="container-fluid">
                    <a class="navbar-brand" href="{{ path('app_main') }}">O'FOOT</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav mx-auto nav-links">
                            <li class="nav-item"><a class="nav-link" href="{{ path('app_main') }}">Home</a></li>
                            <li class="nav-item"><a class="nav-link" href="{{ path('app_tournament_browse') }}">Les Tournois</a></li>
                            <li class="nav-item"><a class="nav-link" href="{{ path('app_tournament_back_new') }}">Créer un tournoi</a></li>
                            <li class="nav-item"><a class="nav-link" href=""{{ path('app_account') }}"">Mon Profil</a></li>
                            <li class="nav-item"><a class="nav-link" href="#">Mon Club</a></li>
                            <li class="nav-item"><a class="nav-link" href="{{ path('app_main_faq') }}">FAQ</a></li>
                            <li class="nav-item"><a class="nav-link" href="{{ path('app_main_about') }}">À propos</a></li>
                            <li class="nav-item"><a class="nav-link" href="{{ path('app_contact') }}">Contact</a></li>
                        </ul>
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_account') }}">
                                    <i class="bi bi-person-circle"></i>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        {% elseif app.user %}
            {# Navbar pour l'utilisateur connecté #}
            <nav class="navbar navbar-expand-lg navbar-dark bg-company-grey custom-navbar">
                <div class="container-fluid">
                    <a class="navbar-brand" href="{{ path('app_main') }}">O'FOOT</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav mx-auto nav-links">
                            <li class="nav-item"><a class="nav-link" href="{{ path('app_main') }}">Home</a></li>
                            <li class="nav-item"><a class="nav-link" href="{{ path('app_tournament_browse') }}">Les Tournois</a></li>
                            <li class="nav-item"><a class="nav-link" href="{{ path('app_account') }}">Mon Profil</a></li>
                            <li class="nav-item"><a class="nav-link" href="#">Club</a></li>
                            <li class="nav-item"><a class="nav-link" href="{{ path('app_main_faq') }}">FAQ</a></li>
                            <li class="nav-item"><a class="nav-link" href="{{ path('app_main_about') }}">À propos</a></li>
                            <li class="nav-item"><a class="nav-link" href="{{ path('app_contact') }}">Contact</a></li>
                        </ul>
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_account') }}">
                                    <i class="bi bi-person-circle"></i>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        {% else %}
            {# Navbar pour le visiteur #}
            <nav class="navbar navbar-expand-lg navbar-dark bg-company-grey custom-navbar">
                <div class="container-fluid">
                    <a class="navbar-brand" href="{{ path('app_main') }}">O'FOOT</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav mx-auto nav-links">
                            <li class="nav-item"><a class="nav-link" href="{{ path('app_main') }}">Home</a></li>
                            <li class="nav-item"><a class="nav-link" href="{{ path('app_tournament_browse') }}">Tournois</a></li>
                            <li class="nav-item"><a class="nav-link" href="{{ path('app_login') }}">Connexion</a></li>
                            <li class="nav-item"><a class="nav-link" href="{{ path('app_register') }}">Inscription</a></li>
                            <li class="nav-item"><a class="nav-link" href="{{ path('app_main_faq') }}">FAQ</a></li>
                            <li class="nav-item"><a class="nav-link" href="{{ path('app_main_about') }}">À propos</a></li>
                            <li class="nav-item"><a class="nav-link" href="{{ path('app_contact') }}">Contact</a></li>
                        </ul>
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_account') }}">
                                    <i class="bi bi-person-circle"></i>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        {% endif %}
    {% endblock %}

    {% block body %}{% endblock %}

    {# Footer #}
    <footer class="bg-company-grey text-center text-white py-4 mt-5 mt-auto">
        <div class="container-fluid">
            <p class="mb-0">Copyright © 2024 Website. All rights reserved.</p>
            <p class="mb-0"><a class="custom-link text-white" href="{{ path('app_main_cgu') }}">Conditions Générales d'Utilisation</a></p>
            <div class="mt-2">
                <a href="#" class="text-white me-2"><i class="bi bi-facebook"></i></a>
                <a href="#" class="text-white me-2"><i class="bi bi-twitter"></i></a>
                <a href="#" class="text-white"><i class="bi bi-instagram"></i></a>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    {% block javascripts %}{% endblock %}
</body>
</html>