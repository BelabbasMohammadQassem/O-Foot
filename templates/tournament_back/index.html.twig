{% extends 'base.html.twig' %}

{% block title %}Tournament index{% endblock %}

{% block body %}
    <h1>Tournament index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom du Tournoi</th>
                <th>Date</th>
                <th>Prix</th>
                <th>Récompenses</th>
                <th>Nombres d'équipes</th>
                <th>Nombres de joueur</th>
                <th>Lieu</th>
                <th>Affiche</th>
                <th>Created_at</th>
                <th>Updated_at</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for tournament in tournaments %}
            <tr>
                <td>{{ tournament.id }}</td>
                <td >{{ tournament.tournamentName }}</td>
                <td>{{ tournament.date ? tournament.date|date('Y-m-d') : '' }}</td>
                <td>{{ tournament.price }}</td>
                <td>{{ tournament.rewards }}</td>
                <td>{{ tournament.teamCount }}</td>
                <td>{{ tournament.playerTeamCount }}</td>
                <td>{{ tournament.location }}</td>
                <td>{{ tournament.poster }}</td>
                <td>{{ tournament.createdAt ? tournament.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ tournament.updatedAt ? tournament.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_tournament_back_show', {'id': tournament.id}) }}">show</a>
                    <a href="{{ path('app_tournament_back_edit', {'id': tournament.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_tournament_back_new') }}">Create new</a>
{% endblock %}
