{% extends 'base.html.twig' %}

{% block title %}Tournament{% endblock %}

{% block body %}
    <div class="container mt-4 custom-contact-container text-center">
    <div class="row">
        <div class="col text-center">
            <div class="rounded-pill bg-dark d-inline-block p-3">
                <h2 class="section-title m-0">{{ tournament.tournamentName}}</h2>
            </div>
        </div>
    </div>

    <div class="semi-transparent-bg-white p-4 mb-4 mt-4">
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ tournament.id }}</td>
            </tr>
            <tr>
                <th>Nom du tournoi</th>
                <td>{{ tournament.tournamentName }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ tournament.date ? tournament.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Prix par équipe</th>
                <td>{{ tournament.price }}</td>
            </tr>
            <tr>
                <th>Récompenses</th>
                <td>{{ tournament.rewards }}</td>
            </tr>
            <tr>
                <th>Nombre d'équipes</th>
                <td>{{ tournament.teamCount }}</td>
            </tr>
            <tr>
                <th>Nombre de joueurs par équipe</th>
                <td>{{ tournament.playerTeamCount }}</td>
            </tr>
            <tr>
                <th>Lieu</th>
                <td>{{ tournament.location }}</td>
            </tr>
            <tr>
                <th>Poster</th>
                <td>{{ tournament.poster }}</td>
            </tr>
            <tr>
                <th>Crée le</th>
                <td>{{ tournament.createdAt ? tournament.createdAt|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Modifié le</th>
                <td>{{ tournament.updatedAt ? tournament.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <div class="text-center">
    <a href="{{ path('app_tournament_back_edit', {'id': tournament.id}) }}" class="btn btn-warning mt-2">Editer</a>

    {{ include('tournament_back/_delete_form.html.twig') }}
    <a href="{{ path('app_tournament_back_index') }}" class="btn btn-secondary mt-2">Retour à la liste des tournois</a>
</div>
    </div>
</div>
{% endblock %}
