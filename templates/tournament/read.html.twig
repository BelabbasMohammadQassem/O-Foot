{% extends 'base.html.twig' %}

{% block title %}Page du Tournoi{% endblock %}

{% block body %}

  <!-- Main Content-->
    <div class="container mt-4">
        <div class="row">
            <div class="col text-center">
                <div class="rounded-pill bg-dark d-inline-block p-3">
                    <h2 class="section-title m-0">Nom du tournoi</h2>
                </div>
                <p class="section-description"></p>
            </div>
        </div>
    </div>
    <div class="container my-4">
        <div class="textblack">
            <div class="card">
                <div class="row g-0">
                    <div class="col-md-4">
                   
                        <img src="{{ asset('images/' ~ tournamentRead.Poster) }}" class="img-fluid rounded-start" alt="Image du tournoi">
                    </div>
                    <div class="col-8 p-4 d-flex flex-column position-static text-center">
                        <h3 class="mb-2 mt-3 display-3">  {{ tournamentRead.TournamentName }}</h3>
                        <p class="mb-1 mt-1"><i class="bi bi-geo-alt-fill icon-tournoi"></i>  {{ tournamentRead.Location }}</p>
                        <p class="mb-1 mt-1"><i class="bi bi-calendar-date icon-tournoi"></i>  {{tournamentRead.Date|date('d F Y') }}</p>
                        <p class="mb-1 mt-1"><i class="bi bi-people-fill icon-tournoi"></i>  {{ tournamentRead.TeamCount }} équipes</p>
                        <p class="mb-1 mt-1"><i class="bi bi-cash-coin icon-tournoi"></i>  {{ tournamentRead.Price }} €</p>
                        <p class="mb-1 mt-1"><i class="bi bi-trophy-fill icon-tournoi"></i>  {{ tournamentRead.Rewards }}</p>
                        <a href="#" class="fs-1 mt-3 align-self-center px-3 py-2 rounded pen-icon-solo text-decoration-none textblack btn btn-secondary w-50">
                            <i class="bi bi-pen me-2"></i> Je m'inscris
                        </a>
                    </div>
                  
                </div>
            </div>
        </div>
        
    </div>
 
{% endblock %}




