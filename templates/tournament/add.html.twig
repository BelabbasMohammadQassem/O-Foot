{% extends 'base.html.twig' %}

{% block title %}Cr√©er un tournoi{% endblock %}

{% block body %}

<div class="container mt-4 custom-contact-container">
    <div class="row">
        <div class="col text-center">
            <div class="rounded-pill bg-dark d-inline-block p-3">
                <h2 class="section-title m-0">Ajouter un tournoi</h2>
            </div>
        </div>
    </div>

<div class="container form-container">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8 col-sm-10">
            {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class': 'login-form'}}) }}
            <div class="textblack text-center">
                <div class="mb-3">
                    {{ form_row(form.tournament_name) }}
                </div>
                <div class="mb-3">
                    {{ form_row(form.location) }}
                </div>
                <div class="mb-3">
                    {{ form_row(form.date) }}
                </div>
                <div class="mb-3">
                    {{ form_row(form.team_count) }}
                </div>
                <div class="mb-3">
                    {{ form_row(form.player_team_count) }}
                </div>
                <div class="mb-3">
                    {{ form_row(form.price) }}
                </div>
                <div class="mb-3">
                    {{ form_row(form.rewards) }}
                </div>
                 <div class="mb-3">
                    {{ form_row(form.poster) }}
                </div>
                <div class="d-grid gap-2">
                    {{ form_widget(form.submit) }}
                </div>
            </div>
            {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>    
{% endblock %}